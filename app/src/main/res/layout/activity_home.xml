<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <SearchView
            android:background="@drawable/edtsearch"
            android:id="@+id/searchView"
            android:queryHint="Tim dia chi lien he, dia diem"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">
        </SearchView>


        <ImageButton
            android:id="@+id/imgbrecord"
            android:src="@drawable/mic"
            android:background="@drawable/bgrecord"
            android:layout_width="60dp"
            android:layout_height="48dp"/>
        <ImageButton
            android:id="@+id/imgbmenu"
            android:src="@drawable/iconmenu"
            android:background="@drawable/record"
            android:layout_width="50dp"
            android:layout_height="48dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/btnthemlienhe"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/adduser"/>
        <TextView
            android:textColor="#38ACEA"
            android:id="@+id/txtthemlienhe"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="Tao nguoi lien he"
            android:textSize="15dp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        tools:ignore="Orientation">
        <ListView
            android:id="@+id/listviewnguoidung"
            android:layout_width="match_parent"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:layout_height="match_parent">
        </ListView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:backgroundTint="#3650DF"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/keypad"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:background="#ECEFF1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imgbStar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/star" />
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yeu Thich"
                android:textSize="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imgganday"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:background="@drawable/clock"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:text="Gan Day"
                android:textSize="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imgdanhba"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/groupuser"/>

            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh Ba"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/edtphim"
        android:inputType="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>